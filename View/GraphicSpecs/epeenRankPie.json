        {
            "name": "mark_total",
            "type": "text",
            "from": {
                "data": "total"
            },
            "encode": {
                "enter": {
                    "text": {
                        "signal": "(datum['field'] >= 1000000) ? round(datum['field']/100000)/10 + 'B' : (datum['field'] >= 1000) ? round(datum['field']/100)/10 +'M' : datum['field'] + 'K'"
                    },
                    "x": {
                        "signal": "width / 4"
                    },
                    "y": {
                        "signal": "height / 4 -5"
                    },
                    "radius": {
                        "value": 135
                    },
                    "angle": {
                        "signal": "(180*((.5*datum['ff_endAngle'])+datum['ff_startAngle'])/3.14) < 180 ? 180-(90-((180*(datum['ff_endAngle'] - datum['ff_startAngle'])/3.14)/2)) + (180*(datum['ff_startAngle'])/3.14) + 180 : 180-(90-((180*(datum['ff_endAngle'] - datum['ff_startAngle'])/3.14)/2)) + (180*(datum['ff_startAngle'])/3.14)"
                    },
                    "theta": {
                        "signal": "(datum['ff_startAngle'] + datum['ff_endAngle'])/2"
                    },
                    "fill": {
                        "value": "black"
                    },
                    "fontSize": {
                        "value": 20
                    },
                    "fontStyle": {
                        "value": "bold"
                    },
                    "align": {
                        "value": "center"
                    },
                    "baseline": {
                        "value": "middle"
                    }
                }
            }
